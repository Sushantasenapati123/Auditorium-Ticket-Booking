
@{

    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @*<title>Login</title>*@
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <style>
        body {
            margin: 0;
            color: #6a6f8c;
            background: #c8c8c8;
            font: 600 16px/18px 'Open Sans',sans-serif;
        }

        *, :after, :before {
            box-sizing: border-box
        }

        .clearfix:after, .clearfix:before {
            content: '';
            display: table
        }

        .clearfix:after {
            clear: both;
            display: block
        }

        a {
            color: inherit;
            text-decoration: none
        }

        .login-wrap {
            width: 100%;
            margin: auto;
            max-width: 525px;
            min-height: 670px;
            position: relative;
            /*background: url(https://raw.githubusercontent.com/khadkamhn/day-01-login-form/master/img/bg.jpg) no-repeat center;*/
            background: url(https://static.wixstatic.com/media/97907f_aec846ac48af4d08a8d26b73b93e6c25~mv2.jpg/v1/crop/x_0,y_158,w_800,h_290/fill/w_617,h_348,al_c,lg_1,q_80,enc_auto/AcousticMoviePosters_B.jpg)no-repeat center;
            box-shadow: 0 12px 15px 0 rgba(0,0,0,.24),0 17px 50px 0 rgba(0,0,0,.19);
        }

        .login-html {
            width: 100%;
            height: 100%;
            position: absolute;
            padding: 90px 70px 50px 70px;
            background: rgba(40,57,101,.9);
        }

            .login-html .sign-in-htm,
            .login-html .sign-up-htm {
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                position: absolute;
                /* transform:rotateY(180deg); */
                backface-visibility: hidden;
                transition: all .4s linear;
            }

        .login-title {
            margin-top: 15px;
            text-align: center;
            font-size: 30px;
            letter-spacing: 2px;
            margin-top: 15px;
            font-weight: bold;
            color: #ECF0F5;
        }

        .login-html .sign-in,
        .login-html .sign-up,
        .login-form .group .check {
            display: none;
        }

        .login-html .tab,
        .login-form .group .label,
        .login-form .group .button {
            text-transform: uppercase;
        }

        .login-html .tab {
            font-size: 22px;
            margin-right: 15px;
            padding-bottom: 5px;
            margin: 0 15px 10px 0;
            display: inline-block;
            border-bottom: 2px solid transparent;
        }

        .login-html .sign-in:checked + .tab,
        .login-html .sign-up:checked + .tab {
            color: #fff;
            border-color: #1161ee;
        }

        .login-form {
            min-height: 345px;
            position: relative;
            perspective: 1000px;
            transform-style: preserve-3d;
        }

            .login-form .group {
                margin-bottom: 15px;
            }

                .login-form .group .label,
                .login-form .group .input,
                .login-form .group .button {
                    width: 100%;
                    color: #fff;
                    display: block;
                }

                .login-form .group .input,
                .login-form .group .button {
                    border: none;
                    padding: 15px 20px;
                    border-radius: 25px;
                    background: rgba(255,255,255,.1);
                }

                .login-form .group input[data-type="password"] {
                    text-security: circle;
                    -webkit-text-security: circle;
                }

                .login-form .group .label {
                    color: #aaa;
                    font-size: 12px;
                }

                .login-form .group .button {
                    background: #1161ee;
                }

                .login-form .group label .icon {
                    width: 15px;
                    height: 15px;
                    border-radius: 2px;
                    position: relative;
                    display: inline-block;
                    background: rgba(255,255,255,.1);
                }

                    .login-form .group label .icon:before,
                    .login-form .group label .icon:after {
                        content: '';
                        width: 10px;
                        height: 2px;
                        background: #fff;
                        position: absolute;
                        transition: all .2s ease-in-out 0s;
                    }

                    .login-form .group label .icon:before {
                        left: 3px;
                        width: 5px;
                        bottom: 6px;
                        transform: scale(0) rotate(0);
                    }

                    .login-form .group label .icon:after {
                        top: 6px;
                        right: 0;
                        transform: scale(0) rotate(0);
                    }

                .login-form .group .check:checked + label {
                    color: #fff;
                }

                    .login-form .group .check:checked + label .icon {
                        background: #1161ee;
                    }

                        .login-form .group .check:checked + label .icon:before {
                            transform: scale(1) rotate(45deg);
                        }

                        .login-form .group .check:checked + label .icon:after {
                            transform: scale(1) rotate(-45deg);
                        }

        .login-html .sign-in:checked + .tab + .sign-up + .tab + .login-form .sign-in-htm {
            transform: rotate(0);
        }

        .login-html .sign-up:checked + .tab + .login-form .sign-up-htm {
            transform: rotate(0);
        }

        .hr {
            height: 2px;
            margin: 60px 0 50px 0;
            background: rgba(255,255,255,.2);
        }

        .foot-lnk {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-wrap">
        <div class="login-html">
            <div class="login-title">
                New User
            </div>
            <!-- <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label> -->
            <!-- <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label> -->
            <div class="login-form">
                <div class="sign-in-htm">
                    <div class="group">
                        <label for="user" class="label" style="font-size:medium">Name</label>
                        <input type="text" id="txtname" class="form-control submit"
                               placeholder="Enter Your Name" />
                    </div>
                    <div class="group">
                        <label for="user" class="label"style="font-size:medium">Email</label>
                        <input type="email" id="txtemail" class="form-control submit"
                               placeholder="Enter Your Email" />
                    </div>
                    <div class="group">
                        <label for="user" class="label"style="font-size:medium">Mobile No.</label>
                        <input type="number" id="txtmobileno" class="form-control submit"
                               placeholder="Enter Your Mobile Number" />
                    </div>
                    <div class="group">
                        <label for="user" class="label"style="font-size:medium">Username</label>
                        <input type="email" id="txtusername" class="form-control submit"
                               placeholder="Enter a Valid User Name" />
                    </div>
                    <div class="group">
                        <label for="pass" class="label"style="font-size:medium">Password</label>
                        <input type="password" id="txtpassword" class="form-control submit"
                               placeholder="Enter a Valid Password" />
                    </div>
                   
                    <div class="group">
                        @*<input type="submit" class="button" value="Sign In">*@
                        <button type="button" class="btn btn-primary btn-lg" id="btnCreate"
                                style="padding-left: 1.5rem; padding-right: 1.5rem;margin-left:100px">
                            Create Account
                        </button>
                    </div>
                   
                    <div class="foot-lnk">
                        <a href="/Account/Login">Remember passward Go To Login</a>
                    </div>
                </div>

            </div>
        </div>
    </div>

</body>
</html>
<script type="text/javascript">
    function Validate() {
        if ($("#txtname").val() == '') {
            alert("Please Enter Name!");
            return false;
        }
        else if ($("#txtemail").val() == '') {
            alert("Please Enter Email!");
            return false;
        }
        else if ($("#txtmobileno").val() == '') {
            alert("Please Enter Mobile Number!");
            return false;
        }
        else if ($("#txtusername").val() == '') {
            alert("Please Enter UserName!");
            return false;
        }
        else if ($("#txtpassword").val() == '') {
            alert("Please Enter Password!");
            return false;
        }
        return true;
    }
    $("#btnCreate").click(function () {
        if (Validate()) {
            var doc = {
                UserId: $("#id").val(),
                UserName: $("#txtusername").val(),
                Password: $("#txtpassword").val(),
                Passwordconfirm: $("#Passwordconfirm").val(),
                FullName: $("#txtname").val(),
                Email: $("#txtemail").val(),
                Mobile: $("#txtmobileno").val(),
                Gender: 'Not Mention',
                Address: 'Not Mention',
                City: 'Not Mention',
                Age: '0',
                DesignationId: '4',
                DepartmentId: '0',
                RollID: '2',
                AuditoriumID: '0'
            };
            if (confirm("Are you sure you want to Submit ?")) {
                $.ajax({
                    url: "/Employee/AddUser",
                    data: doc,
                    type: "POST",
                    success: function (result) {
                        if (result == "Record Saved Successfully") {
                            window.location.href = '/Account/Login/';
                        }


                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });


            }
        }
      

    });
</script>