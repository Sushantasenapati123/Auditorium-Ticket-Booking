@model OHSB.Domain.Payment.RazorPayOptionsModel
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/payment.cshtml";
}

<h1>Registration</h1>

<div>
    <form asp-action="Payment">
        <div class="row">
            <div class="offset-1 col-2">
                <strong>Name</strong>
            </div>
            <div class="col-4">
                <input type="text" asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="offset-1 col-2">
                <strong>Mobile</strong>
            </div>
           
        </div>
        <div class="row">
            <div class="offset-1 col-2">
                <strong>Email</strong>
            </div>
           
        </div>
        <div class="row">
            <div class="offset-1 col-2">
                <strong>Amount</strong>
            </div>
           
        </div>
        <div class="row">
            <div class="col-12 ">
                <button type="submit" class="btn btn-outline-primary">Register</button>
            </div>
        </div>
    </form>
</div>